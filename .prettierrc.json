{
    "singleQuote": true,
    "semi": true,
    "proseWrap": "always",
    "trailingComma": "all",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "always",
    "singleAttributePerLine": true,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^@(.*)$",

        "^[../]",

        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": ["decorators-legacy", "typescript", "javascript"]
}
